*
  padding 0
  margin 0
rem(px)
  return px/14rem
html
  font-size 14px
html,body
  width 100%
  height 100%
  background #f3f3f3
header
  position relative
  width 100%
  height 30%
  display flex
  justify-content center
  align-items: center
  background rgba(22,159,133,0.5)
header .top
  position absolute
  display flex
  align-items: center
  top: 0
  width 100%
  height 20%
  background rgba(0,0,0,0.8);
header .top .left
  float left;
  margin-left 5%
header .top .left a
  font-size rem(20)
  font-weight 400
  color white
header .head
  //display inline-block
  width 30%
  height 50%
  border-radius 50%
  background url("../images/person-head.jpg")no-repeat
  background-size cover
.username
  position absolute
  width 100%
  bottom: 5%
  left 0
  right 0
  text-align center
  font-size rem(18)
  color white
section
  height 50%
section ul
  width 100%
  height 100%
  -webkit-padding-start  0
section ul li
  position relative
  display flex
  align-items center
  padding-left 10%
  padding-right  10%
  width 100%
  height 20%
  border-bottom 2px solid white
  box-sizing border-box
section ul li::after
  content: 'ã€‰'
  position absolute
  right 0
  font-size rem(18)
  font-weight bold
section ul li a
  font-size rem(18)
  font-weight bold
  color #2e2e2e
footer
  position absolute
  bottom 0
  width 100%
  height 10%
  background red
.login-out
  position absolute
  bottom 0
  width 100%
  height 10%
  outline-style none
  border none
  letter-spacing rem(18)
  font-size rem(18)
  font-weight bold
  color white
  background red
  box-sizing border-box






